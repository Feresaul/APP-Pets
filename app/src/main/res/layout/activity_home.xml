<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_logout"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/btn_medica"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20pt"
        android:layout_marginTop="20pt"
        android:layout_marginEnd="20pt"
        android:layout_marginBottom="4pt"
        android:backgroundTint="@color/smoke"
        android:fontFamily="sans-serif-light"
        android:text=" medical"
        android:textColor="@color/darkGray"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_estetica"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20pt"
        android:layout_marginEnd="20pt"
        android:layout_marginBottom="4pt"
        android:backgroundTint="@color/smoke"
        android:fontFamily="sans-serif-light"
        android:text=" esthetic"
        android:textColor="@color/darkGray"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_hospedaje"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20pt"
        android:layout_marginEnd="20pt"
        android:layout_marginBottom="4pt"
        android:backgroundTint="@color/smoke"
        android:fontFamily="sans-serif-light"
        android:text="lodging"
        android:textColor="@color/darkGray"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_citas"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20pt"
        android:layout_marginEnd="20pt"
        android:layout_marginBottom="4pt"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="sans-serif-light"
        android:text="pending services"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_historial"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text=" service history"
            android:textColor="@android:color/darker_gray"
            android:textColorLink="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>